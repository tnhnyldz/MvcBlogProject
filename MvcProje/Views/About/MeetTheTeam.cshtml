@model IEnumerable<EntityLayer.Concrete.Author>

<div class="site-section bg-dark">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2 style="color:white">Yazarlarımız</h2>
                <p>sizlere birbirinden güzel içerikler sunan yazarlarımız. Eğer siz de yazar olmak isterseniz iletişim kısmını kullanabilirsiniz</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5 text-center">
                    <img src="@item.AuthorImage" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                    <h2  style="color:white" class="mb-3 h5">@item.AuthorName</h2>
                    <p>@item.AuthorAbout</p>
  
                </div>
            }
        </div>
    </div>
</div>