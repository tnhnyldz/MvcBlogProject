@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini ">
    <!-- Main content -->
    <div class="container-fluid col-11 mt-2">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-success">
                        <div class="card-header ">
                            <h3 class="card-title">Hakkımızda Sayfa Düzenlemesi</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                        {
                            <div style="background-color:grey" class="card-body">
                                @foreach (var item in Model)
                                {

                                    <div class="form-group">
                                        <label for="inputName">ID</label>
                                        <input type="text"  class="form-control bg-white border-light" value="@item.AboutID" name="AboutID">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Görsel 1</label>
                                        <input type="text" name="@item.AboutImage1" class="form-control bg-white border-light" value="@item.AboutImage1">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputName">Görsel 2</label>
                                        <input type="text" name="@item.AboutImage2" class="form-control bg-white border-light" value="@item.AboutImage2">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputDescription">Açıklama 1</label>
                                        <textarea name="@item.AboutContent1" class="form-control bg-white border-light" rows="4">@item.AboutContent1</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputDescription">Açıklama 2</label>
                                        <textarea name="@item.AboutContent2" class="form-control bg-white border-light" rows="4">@item.AboutContent2</textarea>
                                    </div>
                                }
                                <button class="btn btn-danger">Güncelle</button>
                            </div>
                            <!-- /.card-body -->
                        }
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </section>
    </div>
</body>

</html>
