
@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Bize Ulaşın</h1>
                    <p class="lead mb-4 text-white">Önerileriniz Talepleriniz ve yaşadığınız problemler için bir mesaj uzağınızdayız</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">

                <form method="post" class="p-5 bg-dark">
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            @*<label class="text-white " for="fname">Adınız</label>*@
                            <input name="Name" type="text" id="fname" class="form-control bg-dark border-light " placeholder="Adınız" >
                        </div>
                        <div class="col-md-6">
                            @*<label class="text-da" for="lname">Soyadınız</label>*@
                            <input name="Surname" type="text" id="lname" class="form-control bg-dark border-light" placeholder="Soyadınız">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            @*<label class="text-white" for="email">Email</label>*@
                            <input name="Mail" type="email" id="email" class="form-control bg-dark border-light"  placeholder="E-Mail">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            @*<label class="text-white" for="subject">Konu</label>*@
                            <input name="Subject" type="text" id="subject" class="form-control bg-dark border-light" placeholder="Konu">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            @*<label class="text-white" for="message">Mesajınız</label>*@
                            <textarea name="Message" id="message" cols="30" rows="7" class="form-control bg-dark border-light" placeholder="Buraya mesajınızı bırakabilirsiniz..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Mesajı Gönder" class="btn btn-outline-light border-light py-2 px-4 ">
                        </div>
                    </div>


                </form>
            </div>
            <div class="col-md-5 ">

                <div class="p-4 mb-3 bg-dark">
                    <p class="mb-0 font-weight-bold text-white">Address</p>
                    <p class="mb-4">203 Fake St. Mountain View, San Francisco, California, USA</p>

                    <p class="mb-0 font-weight-bold text-white">Phone</p>
                    <p class="mb-4">(507) 123 45 67</p>

                    <p class="mb-0 font-weight-bold text-white">Email Address</p>
                    <p class="mb-0 ">youremail@domain.com</p>

                </div>

            </div>
        </div>
    </div>
</div>
@Html.Action("Footer", "About")


