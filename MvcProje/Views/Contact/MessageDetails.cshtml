@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">


    <section class="content">
        <div class="container-fluid col-11 mt-3">
            <div class="row">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Mesaj Detayları</h1>
                            <br />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <a href="mailbox.html" class="btn btn-outline-light btn-block mb-3">Gelen Kutusuna Dön</a>
                    <div class="card">
                        <div class="card-header bg-black">
                            <h3 class="card-title text-white">Klasörler</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0 " style="background-color:gray">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="fas fa-inbox"></i> Gelen Kutusu
                                        <span class="badge bg-success float-right">2</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="far fa-envelope"></i> Gönderilenler
                                        <span class="badge bg-primary float-right">0</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="far fa-file-alt"></i> Taslaklar
                                        <span class="badge bg-danger float-right">0</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="fas fa-filter"></i> Tanıtımlar
                                        <span class="badge bg-warning float-right">0</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                                        <span class="badge bg-orange float-right">0</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header bg-black">
                            <h3 class="card-title">Hazır Mesajlar</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div style="background-color:gray" class="card-body p-0 ">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item">
                                    <a href="#" class="nav-link text-dark">
                                        <i class="far fa-circle text-danger"></i>
                                        Sosyal Medya Mesajları
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link  text-dark">
                                        <i class="far fa-circle text-warning"></i> Tanıtımlar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link  text-dark">
                                        <i class="far fa-circle text-primary"></i>
                                        Mail Bülteni
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-outline">
                        <div class="card-header bg-black">
                            <h3 class="card-title">Mesaj Detayları</h3>
                            <div class="card-tools">
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div style="background-color:gray" class="mailbox-read-info">
                                <h5>Gönderen:<b> @Html.DisplayFor(x => x.Name)  @Html.DisplayFor(x => x.SurName)</b></h5>
                                <h6>
                                    Mail Adresi: <label>@Html.DisplayFor(x => x.Mail)</label>
                                    <span class="mailbox-read-time float-right text-white">@Model.MessageDate.ToShortDateString()</span>
                                </h6>
                            </div>

                            <div style="background-color:gray" class="mailbox-read-message">
                                <p>@Model.Message</p>
                            </div>
                            <!-- /.mailbox-read-message -->
                        </div>
                        <!-- /.card-body -->
                        <div style="background-color:gray" class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default bg-gray-dark"><i class="fas fa-reply"></i> Yanıtla</button>
                                <button type="button" class="btn btn-default bg-gray-dark"><i class="fas fa-share"></i> İlet</button>
                            </div>
                            <button type="button" class="btn btn-default bg-danger "><i class="far fa-trash-alt"></i> Sil</button>
                            <button type="button" class="btn btn-default bg-primary"><i class="fas fa-print"></i> Yazdır</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</body>
</html>