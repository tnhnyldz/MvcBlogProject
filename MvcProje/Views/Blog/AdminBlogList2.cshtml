@model IEnumerable<EntityLayer.Concrete.Blog>
@{ string Color = " ";}
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="container-fluid col-10 mt-3">
        <h1 class="lead font-weight-normal">Kategoriler</h1>
        <br />
        <section class="content">
            <div class="card bg-black">
                <div class="card-header">
                    <h3 class="card-title">Bloglar</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects table-dark table-hover">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    ID
                                </th>
                                <th style="width: 20%">
                                    Blog Başlık
                                </th>
                                <th style="width: 10%">
                                    Yazar
                                </th>
                                <th>
                                    Beğeni Oranı
                                </th>
                                <th style="width: 10%" class="text-center">
                                    Kategori
                                </th>
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Category.CategoryName == "Seyahat")
                                {
                                    Color = "badge badge-primary text-white";
                                }
                                else if (item.Category.CategoryName == "Teknoloji")
                                {
                                    Color = "badge badge-info text-white";
                                }
                                else if (item.Category.CategoryName == "Yazılım")
                                {
                                    Color = "badge badge-warning text-white";
                                }
                                else if (item.Category.CategoryName == "Spor")
                                {
                                    Color = "badge badge-danger text-white";
                                }
                                else if (item.Category.CategoryName == "Film-Dizi")
                                {
                                    Color = "badge badge-success text-white";
                                }
                                else if (item.Category.CategoryName == "Kültür-Sanat")
                                {
                                    Color = "badge badge-light text-dark";
                                }
                                <tr>
                                    <td>
                                        @item.CategoryID
                                    </td>
                                    <td>
                                        @item.BlogTitle
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                            </li>
                                        </ul>
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                            </div>
                                        </div>
                                        <small>
                                            57% Complete
                                        </small>
                                    </td>
                                    <td class="project-state">
                                        <span class="@Color">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">
                                            <i class="fas fa-folder">
                                            </i>
                                            Sitede Gör
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </section>
    </div>
</body>
</html>