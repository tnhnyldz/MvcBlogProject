@model EntityLayer.Concrete.Blog

@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid col-8 mt-3">
    <h1 class="lead font-weight-normal">Blog Güncelle</h1>
    <br />
    <form method="post" class="form-group ">
        @Html.Label("Blog ID")
        @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control bg-dark" })
        <br />
        @Html.Label("Blog Başlığı")
        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control bg-dark" })
        <br />

        @Html.Label("Blog Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control bg-dark" })
        <br />

        @Html.Label("Resim Link")
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control bg-dark" })
        <br />
        @Html.Label("Resim Link 2")
        @Html.TextBoxFor(x => x.BlogImage2, new { @class = "form-control bg-dark" })
        <br />
        @Html.Label("Resim Link 3")
        @Html.TextBoxFor(x => x.BlogImage3, new { @class = "form-control bg-dark" })
        <br />

        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control bg-dark" })
        <br />

        @Html.Label("Author")
        @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.values2, new { @class = "form-control bg-dark" })
        <br />

        @Html.Label("Blog İçeriği")
        @Html.TextAreaFor(x => x.BlogContent, 10, 20, new { @class = "form-control bg-dark" })
        <br />
        <button class="btn btn-outline-warning">Güncelle</button>
    </form>
</div>
