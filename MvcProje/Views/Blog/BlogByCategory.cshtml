@model IEnumerable<EntityLayer.Concrete.Blog>
@{ string Color = " ";}
@{
    ViewBag.Title = "BlogByCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>@ViewBag.CategoryName</h3>
                <h6>@ViewBag.CategoryDesc</h6>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.Category.CategoryName == "Seyahat")
                {
                    Color = "post-category text-white bg-primary mb-3";
                }
                else if (item.Category.CategoryName == "Teknoloji")
                {
                    Color = "post-category text-white bg-info mb-3";
                }
                else if (item.Category.CategoryName == "Yazılım")
                {
                    Color = "post-category text-white bg-warning mb-3";
                }
                else if (item.Category.CategoryName == "Spor")
                {
                    Color = "post-category text-white bg-danger mb-3";
                }
                else if (item.Category.CategoryName == "Film-Dizi")
                {
                    Color = "post-category text-white bg-success mb-3";
                }
                else if (item.Category.CategoryName == "Kültür-Sanat")
                {
                    Color = "post-category text-white bg-dark mb-3";
                }

                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="/Blog/BlogDetails/@item.BlogID"><img src="@item.BlogImage" style="height:250px" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="@Color">@item.Category.CategoryName</span>

                            <h2><a href="/Blog/BlogDetails/@item.BlogID">@item.BlogTitle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1"><a href="@item.Author.AuthorImage">@item.Author.AuthorName</a></span>
                                <span>@(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</span>
                            </div>

                            <p>@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 200).LastIndexOf(" "))...</p>
                            <p><a href="#">Read More</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("Footer", "About")
