@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="pt-5">
    <h3 class="mb-5 text-light">Bu posta yapılan yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                @*<div class="vcard">
                    <img src="@item." alt="Image placeholder">
                </div>*@
                <div class="comment-body">
                    <h3  style="color:white">@item.UserName</h3>
                    <div class="meta">
                        @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))
                    </div>
                    <p class="text-white" >@item.CommentText</p>
                </div>
            </li>
        }
    </ul>
    @Html.Action("LeaveComment", "Comment")
</div>
