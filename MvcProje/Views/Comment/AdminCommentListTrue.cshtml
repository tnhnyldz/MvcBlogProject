@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini ">
    <div class="container-fluid col-10 mt-2">
        <!-- Main content -->
        <section class="content bg-dark">
            <div class="container-fluid">
                @if (Model.Count() == 0)
                {
                    <div class="wrapper">
                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2 class="mt-5">Burası tamamen boş :(</h2>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-12 mt-3">
                            <h2 style="color:white">Yayınlanan Yorumlar</h2>
                        </div>
                        @foreach (var item in Model)
                        {
                            <div class="card-body bg-light mt-2">
                                <div class="post">
                                    <div class="user-block">
                                        <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">
                                        <span class="username">
                                            <a href="#">@item.UserName - @item.Blog.BlogTitle</a>

                                        </span>
                                        <span class="description">@item.CommentDate.ToShortDateString()</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        @item.CommentText
                                    </p>
                                    <p>
                                        <span class="float-right ">
                                            <a href="/Comment/StatusChangeToFalse/@item.CommentID" class="link-black text-sm no-hover ">
                                                <i class="far fa-comments mr-1"></i> Yorumu Kaldır
                                            </a>
                                        </span>
                                    </p>

                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </section>

    </div>
</body>
</html>